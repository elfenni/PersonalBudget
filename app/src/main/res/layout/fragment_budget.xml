<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/preferenze_voci_listview_item_rlPadre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingRight="4dp"
    android:paddingLeft="4dp">
        
    <TextView
        android:id="@+id/fs_tvPeriodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:text="@string/fragment_budget_budgets"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />
    
    <FrameLayout
        android:layout_width="1600dp"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@id/fs_tvPeriodo"
        android:layout_toStartOf="@id/fs_tvPeriodo"
        android:background="@android:color/darker_gray" />
    
    <FrameLayout
        android:layout_width="1600dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/fs_tvPeriodo"
        android:layout_toEndOf="@id/fs_tvPeriodo"
        android:background="@android:color/darker_gray" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fs_tvPeriodo"
        android:layout_marginTop="4dp"
        android:divider="#00000000"
        android:dividerHeight="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:drawSelectorOnTop="true">

    </ListView>

    <ImageView
        android:id="@+id/fragment_budget_ivWallet"
        android:contentDescription="@string/provv_contenutoImmagini"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/img_wallet"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/fragment_budget_tvToccaPiu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_budget_ivWallet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/fragment_budget_toccaPiu"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

</RelativeLayout>