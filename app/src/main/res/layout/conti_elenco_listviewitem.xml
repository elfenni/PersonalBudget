<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginTop="16dp"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/cli_rlPadre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/cli_llLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="24dp"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/cli_tvLetteraIniz"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/back_round_primary"
                android:gravity="center"
                android:text="@string/provv_numero_10"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="28sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/cli_tvImporto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/provv_importoValutaZero"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/cli_tvConto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="16dp"
            android:scrollHorizontally="true"
            android:text="@string/provv_lorem_ipsum"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/cli_llLabel"
            android:layout_toLeftOf="@+id/cli_tvImporto" />

        <TextView
            android:id="@+id/cli_tvValuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/cli_tvConto"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>