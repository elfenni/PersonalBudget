<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:elevation="4dp"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rlParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:padding="4dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:contentDescription="@string/provv_contenutoImmagini"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/img_budget"
            android:background="@drawable/back_round_primarylight"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/tvSpentInvisible"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/ivIcon"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="@string/provv_percentuale_zero"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvBudgetType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/ivIcon"
            android:layout_toEndOf="@id/ivIcon"
            android:text="@string/provv_lorem_ipsum"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/tvSaved"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tvSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:text="@string/provv_importoValutaZero"
            android:layout_marginLeft="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvDateEndInvisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBudgetType"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/ivIcon"
            android:scrollHorizontally="true"
            android:text="@string/provv_lorem_ipsum"
            android:background="@drawable/back_textview_tag"
            android:textSize="12sp"
            android:gravity="center"
            android:maxLength="25"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:ellipsize="middle"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:layout_marginTop="4dp" />

        <ImageView
            android:src="@drawable/ic_visibility_black_24dp"
            android:id="@+id/imageView4"
            android:alpha="0.5"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/tvPerc"
            android:layout_below="@id/tvTag"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="-3dp" />

        <ProgressBar
            android:id="@+id/pbBudget"
            style="@style/tallerBarStyle"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:minHeight="8dp"
            android:progress="70"
            android:layout_below="@+id/tvPerc"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <TextView
            android:text="Spent: 75,65%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPerc"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_below="@+id/tvTag"
            android:layout_alignLeft="@+id/tvTag"
            android:layout_alignStart="@+id/tvTag" />

    </RelativeLayout>

</android.support.v7.widget.CardView>