<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:elevation="2dp"
    android:layout_margin="6dp">

    <RelativeLayout
        android:id="@+id/rlParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ivIcona"
            android:src="@drawable/tag_0"
            android:layout_marginLeft="8dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivIcona"
            android:text="@string/provv_importoValutaZero"
            android:id="@+id/tvImporto"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textColor="@android:color/black" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ibOverflow"
            android:src="@drawable/ic_more_vert_black_16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvImporto"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="journeys"
            android:id="@+id/tvVoce"
            android:ellipsize="end"
            android:textStyle="bold"
            android:layout_below="@+id/tvImporto"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/ibOverflow"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Munich"
            android:id="@+id/tvDescrizione"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/tvVoce"
            android:maxLines="1"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textStyle="italic"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DEFAULT"
            android:id="@+id/tvConto"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/tvDescrizione"
            android:ellipsize="end"
            android:maxLines="1"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

