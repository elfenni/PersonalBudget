<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:elevation="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:layout_marginLeft="48dp">

                <ImageView
                    android:id="@+id/spese_entrate_dettaglio_voce_ivIcona"
                    android:contentDescription="@string/provv_contenutoImmagini"
                    android:src="@drawable/tag_17"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:padding="12dp"
                    android:transitionName="icona"
                    app:layout_collapseMode="parallax"
                    android:background="@drawable/background_tondo" />

                <ImageView
                    android:id="@+id/ivFreccia"
                    android:contentDescription="@string/provv_contenutoImmagini"
                    android:src="@drawable/ic_freccia_dx"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_collapseMode="parallax" />

                <TextView
                    android:id="@+id/tvImporto"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/provv_importoValutaZero"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:layout_collapseMode="parallax"/>

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:src="@drawable/ic_content_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:layout_margin="16dp"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end"
        android:elevation="6dp"
        app:pressedTranslationZ="6dp"
        android:onClick="fabPremuto" />


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingTop="16dp">

        <RelativeLayout
            android:id="@+id/preferenze_voci_listview_item_rlPadre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" >

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_importo"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_marginTop="16dp"
                android:elevation="2dp">

                <RelativeLayout
                    android:id="@+id/spese_entrate_dettaglio_voce_rlImporto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="4dp">

                    <LinearLayout
                        android:id="@+id/spese_entrate_dettaglio_voce_rlImportoLabels"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/ivValuta"
                        android:layout_marginLeft="16dp">

                        <TextView
                            android:id="@+id/spese_entrate_dettaglio_voce_tvImportoOrigLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dettaglio_voce_importoOriginale"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvImportoOriginale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/generici_trattino"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/dettaglio_voce_tassoCambio"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tvTassoCambio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/generici_trattino"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/text_secondary" />

                     </LinearLayout>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="A"
                        android:id="@+id/ivValuta"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:textSize="40sp"
                        android:layout_marginLeft="8dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:src="@drawable/ic_social_public" />




                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_info"
                android:layout_below="@id/card_view_importo"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_marginTop="12dp"
                android:elevation="2dp">

                <RelativeLayout
                    android:id="@+id/spese_entrate_dettaglio_voce_rlInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="4dp">

                    <ImageView
                        android:text="B"
                        android:id="@+id/sedv_tvB"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:textSize="40sp"
                        android:layout_width="50dp"
                        android:layout_marginLeft="8dp"
                        android:layout_height="50dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:src="@drawable/ic_action_description" />

                    <TextView
                        android:id="@+id/sedv_tvContoTitolo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/dettagli_voce_conto"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_toRightOf="@+id/sedv_tvB"
                        android:layout_marginLeft="16dp" />

                    <TextView
                        android:id="@+id/sedv_tvConto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_below="@+id/sedv_tvContoTitolo"
                        android:layout_marginRight="5dp"
                        android:text="@string/provv_lorem_ipsum"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_secondary"
                        android:layout_toRightOf="@+id/sedv_tvB"
                        android:layout_marginLeft="16dp"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvDataTitolo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_below="@+id/sedv_tvConto"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/dettagli_voce_data"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_toRightOf="@+id/sedv_tvB"
                        android:layout_marginLeft="16dp" />

                    <TextView
                        android:id="@+id/tvData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_below="@+id/tvDataTitolo"
                        android:layout_marginRight="5dp"
                        android:text="@string/provv_lorem_ipsum"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_secondary"
                        android:layout_toRightOf="@+id/sedv_tvB"
                        android:layout_marginLeft="16dp"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvDescrizioneTitolo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_below="@+id/tvData"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/dettagli_voce_descrizione"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_toRightOf="@+id/sedv_tvB"
                        android:layout_marginLeft="16dp" />

                    <TextView
                        android:id="@+id/tvDescrizione"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_below="@+id/tvDescrizioneTitolo"
                        android:layout_marginBottom="4dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/provv_lorem_ipsum"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_secondary"
                        android:layout_toRightOf="@+id/sedv_tvB"
                        android:layout_marginLeft="16dp"
                        android:ellipsize="end" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_ripetizione"
                android:layout_below="@id/card_view_info"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_marginTop="12dp"
                android:elevation="2dp">

                <RelativeLayout
                    android:id="@+id/spese_entrate_dettaglio_voce_rlRipetizione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="4dp">

                    <LinearLayout
                        android:id="@+id/spese_entrate_dettaglio_voce_llRipetizioneInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/sedv_tvC"
                        android:layout_marginLeft="16dp">

                        <TextView
                            android:id="@+id/tvRipetizione"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/dettagli_voce_ripetizione"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/dettagli_voce_tvRipetizione"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generici_trattino"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/text_secondary"
                            android:ellipsize="end" />

                        <TextView
                            android:id="@+id/menu_esporta_tvGoogleDocs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/dettagli_voce_fine_ripetizione"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/dettagli_voce_tvFineRipetizione"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="@string/generici_trattino"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/text_secondary"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="C"
                        android:id="@+id/sedv_tvC"
                        android:textColor="@android:color/white"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_action_autorenew" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>>

</android.support.design.widget.CoordinatorLayout>