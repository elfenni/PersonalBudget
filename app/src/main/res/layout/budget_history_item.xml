<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivIcon"
            android:contentDescription="@string/provv_contenutoImmagini"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/img_maiale_verde"
            android:layout_marginStart="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="12dp"
            android:background="@drawable/background_tondo" />

        <ProgressBar
            android:id="@+id/pbBudget"
            style="@style/tallerBarStyle"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:max="100"
            android:minHeight="8dp"
            android:progress="70"
            android:layout_marginStart="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintHorizontal_bias="0.46"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toBottomOf="@+id/ivIcon"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvPeriod"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:text="1/11/2016 - 30/11/2016"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp"
            android:layout_marginStart="12dp"
            app:layout_constraintLeft_toRightOf="@+id/ivIcon"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toTopOf="@+id/ivIcon" />

        <TextView
            android:id="@+id/tvTag"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:text="@string/provv_lorem_ipsum"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            app:layout_constraintRight_toLeftOf="@+id/tvSaved"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.33"
            android:layout_marginTop="3dp" />

        <TextView
            android:id="@+id/tvSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/provv_importoValutaZero"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvPeriod" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/data_expanded"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/pbBudget"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1">

            <View
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_width="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/view5"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.43"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintLeft_creator="1" />

            <ImageView
                android:src="@drawable/ic_action_view_as_list"
                android:background="@drawable/background_tondo_grigio"
                android:padding="12dp"
                android:elevation="6dp"
                android:id="@+id/imageView3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toBottomOf="@+id/view5"
                android:layout_marginTop="16dp"
                android:contentDescription="" />

            <TextView
                android:text="@string/budget_dettaglio_importo"
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                app:layout_constraintLeft_toRightOf="@+id/imageView3"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp" />

            <TextView
                android:id="@+id/tvAmount"
                android:text="@string/provv_importoValutaZero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/textView18"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp" />

            <TextView
                android:text="@string/budget_dettaglio_speso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                app:layout_constraintLeft_toLeftOf="@+id/textView18"
                app:layout_constraintRight_toLeftOf="@+id/tvSpent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintLeft_creator="1" />

            <TextView
                android:text="@string/provv_importoValutaZero"
                app:layout_constraintTop_toTopOf="@+id/textView20"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSpent"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp" />

            <TextView
                android:text="@string/budget_dettaglio_tipoBudget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                app:layout_constraintTop_toBottomOf="@+id/textView20"
                app:layout_constraintLeft_toLeftOf="@+id/textView20"
                android:layout_marginTop="4dp" />

            <TextView
                android:text="@string/provv_lorem_ipsum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBudgetType"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toTopOf="@+id/textView22" />

            <TextView
                android:text="@string/budget_dettaglio_scadenza"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView22"
                app:layout_constraintLeft_toLeftOf="@+id/textView22" />

            <TextView
                android:text="@string/provv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEndDate"
                app:layout_constraintTop_toTopOf="@+id/textView24"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp" />


        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/data_expanded"
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.43"
            android:id="@+id/view4"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:text="@string/budgets_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvShowHide"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/ibShowHide"
            app:layout_constraintBottom_toBottomOf="@+id/ibShowHide"
            app:layout_constraintVertical_bias="0.71000004"
            android:textAllCaps="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_navigation_expand"
            android:id="@+id/ibShowHide"
            android:background="@android:color/transparent"
            android:layout_marginEnd="12dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription=""
            tools:alpha="0.5"
            app:layout_constraintVertical_bias="0.56" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_action_news"
            android:id="@+id/imageView4"
            app:layout_constraintLeft_toLeftOf="@+id/tvPeriod"
            app:layout_constraintTop_toBottomOf="@+id/tvPeriod" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>