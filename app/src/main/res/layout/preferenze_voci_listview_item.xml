<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginTop="16dp"
    android:elevation="2dp"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/preferenze_voci_listview_item_rlPadre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/preferenze_voci_listview_item_ivIcona"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:src="@drawable/tag_0"/>

        <TextView
            android:id="@+id/preferenze_voci_listview_item_tvVoce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/provv_lorem_ipsum"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@+id/preferenze_voci_listview_item_ivIcona"
            android:textColor="@color/text_primary"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:ellipsize="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXPENSE"
            android:id="@+id/preferenze_voci_listview_item_tvTipoVoce"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/preferenze_voci_listview_item_ivIcona"
            android:textColor="@color/rosso" />

    </RelativeLayout>

</android.support.v7.widget.CardView>